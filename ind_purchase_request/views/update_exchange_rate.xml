<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record forcecreate="True" id="update_exchange_rate" model="ir.cron">
        <field name="name">Actualizar Tipo de Cambio</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">24</field>
        <field name="interval_type">hours</field>
        <field name="nextcall" eval="(datetime.today()).strftime('%Y-%m-%d 16:25:00')"/>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="state">code</field>
        <field name="code">model.button_update_currency_rate()</field>
        <field name="doall" eval="True"/>
    </record>

    <record forcecreate="True" id="set_exchange_rate" model="ir.cron">
        <field name="name">Establecer Tipo de Cambio</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">24</field>
        <field name="interval_type">hours</field>
        <field name="nextcall" eval="(datetime.today()).strftime('%Y-%m-%d 12:00:00')"/>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_res_currency_rate"/>
        <field name="state">code</field>
        <field name="code">model.create_currency_rate_record()</field>
        <field name="doall" eval="True"/>
    </record>
</odoo>