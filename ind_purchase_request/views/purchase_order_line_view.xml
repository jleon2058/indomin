<?xml version="1.0" ?>
<odoo>
    <!-- Herencia de Vista Árbol de Línea de  Orden de Compras -->
    <record id="ind_purchase_order_line_tree" model="ir.ui.view">
        <field name="name">ind.purchase.order.line.tree</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase_request.purchase_order_line_tree_sub" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="groups">
                    ind_purchase_request.group_purchase_order_supplier
                </attribute>
            </xpath>
            <xpath expr="//field[@name='price_unit']" position="attributes">
                <attribute name="groups">
                    ind_purchase_request.group_purchase_order_price
                </attribute>
            </xpath>
            <xpath expr="//field[@name='price_subtotal']" position="attributes">
                <attribute name="groups">
                    ind_purchase_request.group_purchase_order_price
                </attribute>
            </xpath>
        </field>
    </record>

    <!-- Herencia de Vista Formulario de Línea de  Orden de Compras -->
    <record id="ind_purchase_order_line_form" model="ir.ui.view">
        <field name="name">ind.purchase.order.line.form</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase_request.purchase_order_line_form2_sub" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="groups">
                    ind_purchase_request.group_purchase_order_supplier
                </attribute>
            </xpath>
            <xpath expr="//field[@name='price_unit']" position="attributes">
                <attribute name="groups">
                    ind_purchase_request.group_purchase_order_price
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>